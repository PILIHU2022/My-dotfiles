{
    "[python]": {
    },

//设置字体

    "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace,'微软雅黑'",
    "editor.fontSize": 16, 
    "editor.fontWeight": "normal",
    
//其他设置

    "editor.tabCompletion": "on",
    "files.autoSave": "onWindowChange",
    "editor.lineNumbers": "on",
    "python.languageServer": "Pylance",
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "blink",
    "editor.copyWithSyntaxHighlighting": true,
    "terminal.integrated.enableFileLinks": "off",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontSize": 16,
    "workbench.colorTheme": "Default Light Modern",
    "editor.minimap.enabled": false,
    "files.associations": {
        "*.py": "python"
    },
    "editor.codeLensFontFamily": "'HaromonyOS sans',Cascadia Code",
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "workbench.editor.untitled.hint": "hidden",
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.fontFamily": "Cascadia Code,'Noto Sans Mono',monospace,'CaskaydiaCove Nerd Font SemiLight'",
    "C_Cpp.default.compilerPath": "/usr/bin/clang",
    "cmake.configureOnOpen": true,
    "explorer.confirmDragAndDrop": false
}